<li id="micropost-<%= micropost.id %>">
  <div class="icon"></span><%= image_tag micropost.user.picture.micropost_icon.url if micropost.user.picture? %></div>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= render 'microposts/instrument_list', instrument_list: micropost.instrument_list %>
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at)+"前" %> 
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>