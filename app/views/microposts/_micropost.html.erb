<li id="micropost-<%= micropost.id %>">
  <div class="icon">
    <% if micropost.user.picture? %>
      </span><%= image_tag micropost.user.picture.micropost_icon.url %>
    <% else %>
      </span><%= image_tag 'default_micropost_icon.jpg' %>
    <% end %>
  </div>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="title song_title">
    <%= micropost.song_title %>
    <%= render 'microposts/instrument_list', instrument_list: micropost.instrument_list %>
    <span class="title beginner">
      <%= micropost.beginner %>
    </span>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at)+"前" %> 
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>