<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field"> 
    <%= f.label :song_title, "曲名" %>
    <%= f.text_field :song_title, class: 'form-control' %>
  
    <%= f.label :instrument_list, "楽器（複数の場合カンマ区切り）" %><br>
    <%= text_field_tag 'micropost[instrument_list]', @micropost.instrument_list.join(','), "data-role" => "tagsinput" %>
  
    <%= f.text_area :content %>
    
    <label><%=f.radio_button :beginner, "初心者にもおすすめ" %>初心者にもおすすめできる！</label>
    
  </div>
  
  
  
  <span class="picture">
    <%= f.label :picture, "画像（任意）" %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>