<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <% populars.each do |popular| %>
      <%= link_to "#{popular}", "/retrieval/#{popular}", method: :post %>
      <% end %>
      
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>ようこそ</h1>

    <h2>
      これはくろみのサイトです
    </h2>

    <%= link_to "新規登録", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>